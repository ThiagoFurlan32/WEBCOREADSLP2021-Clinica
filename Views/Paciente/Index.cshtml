@model IEnumerable<WEBCORELP2021.Models.Dominio.Paciente>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Pacientes</h1>

<p>
    <button type="button" class="btn btn-outline-primary"><a asp-action="Create">Cadastrar Paciente</a></button>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.planoDeSaude)
            </th>
            <th>
                Ações
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.planoDeSaude.nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id"><button type="button" class="btn btn-outline-warning">Editar</button></a> |
                <a asp-action="Details" asp-route-id="@item.id"><button type="button" class="btn btn-outline-success">Visualizar</button></a> |
                <a asp-action="Delete" asp-route-id="@item.id"><button type="button" class="btn btn-outline-danger">Excluir</button></a>
            </td>
        </tr>
}
    </tbody>
</table>
